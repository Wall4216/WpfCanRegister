<Page x:Class="WpfCanRegister.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NameTextBox" Margin="5" Grid.Row="0"/>
        <TextBox x:Name="AgeTextBox" Margin="5" Grid.Row="1"/>
        <TextBox x:Name="EmailTextBox" Margin="5" Grid.Row="2"/>
        <Button Content="Проверить" Margin="5" Width="100" HorizontalAlignment="Left" Grid.Row="3" Click="CheckButton_Click"/>
    </Grid>

</Page>
